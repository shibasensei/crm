doctype html
html
    head
        link(rel="stylesheet", href="css/style.css")
        link(rel="stylesheet", href="bower_components/bootstrap/dist/css/bootstrap.min.css")
        title Crm
    body
        nav.navbar.navbar-expand.navbar-dark.bg-dark
            button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarTogglerDemo01' aria-controls='navbarTogglerDemo01' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarTogglerDemo01.collapse.navbar-collapse
                a.ml-1.navbar-brand(href='/welcome') CRM
                ul.navbar-nav.mr-auto.mt-2.mt-lg-0
                    li.nav-item
                        a.nav-link(href='/getClients') Data
                    li.nav-item.active
                        a.nav-link(href='/add') Add Client
                    li.nav-item
                        a.nav-link(href='/analytics') Analytics

                a.text-warning(href='/profile') #{email}
        .position-relative.overflow-hidden.p-3.p-md-4.m-md-3.text-center.bg-white
        main.flex-shrink-0(role='main')
            .container.scroll
                form.p-3.border.rounded
                    .form-group
                        label(for='exampleFormControlInput1') Product name:
                        input#addProductName.form-control(type='name' placeholder='Apple')
                    .form-group
                        label(for='exampleFormControlInput1') Price:
                        input#addPrice.form-control(type='phone' placeholder='10$')
                    .form-group
                        label(for='exampleFormControlInput1') Quantity:
                        input#addQuantity.form-control(type='phone' placeholder='100')
                    .form-group
                        label(for='exampleFormControlTextarea1') Comments:
                        textarea#addComments.form-control(rows='4')
                    button.btn.btn-success.btn-block(type='submit' onclick='addClient()') Add Client
                    .modal-footer
                        .p#statusAdd
        footer.footer.mt-5.py-3.bg-light.border-top
            .container
             span.text-muted CRM | Viacheslav Verchonov
        script(src='bower_components/jquery/dist/jquery.min.js')
        script(src='bower_components/bootstrap/dist/js/bootstrap.min.js')
        script(src='js/help.js')
